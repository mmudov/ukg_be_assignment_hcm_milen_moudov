@model User

@{
    ViewData["Title"] = "User details";
}

<h2>Details for @Model.FirstName @Model.LastName</h2>

<dl class="row">
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Job Title</dt>
    <dd class="col-sm-10">@Model.JobTitle</dd>

    <dt class="col-sm-2">Department</dt>
    <dd class="col-sm-10">@Model.Department?.Name</dd>

    <dt class="col-sm-2">Salary</dt>
    <dd class="col-sm-10">@Model.Salary.ToString("C")</dd>

    <dt class="col-sm-2">Role</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">⬅️ Back</a>
